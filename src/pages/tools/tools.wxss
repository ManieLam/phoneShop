/**index.wxss**/

.homepage .head {
    width: 750rpx;
    height: 380rpx;
    position: relative;
}

.homepage .head image {
    width: 750rpx;
    height: 380rpx;
}

.homepage .machine-model {
    width: 400rpx;
    text-align: center;
    padding: 50rpx 0;
    color: #fff;
    font-size: 32rpx;
    line-height: 1.7;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -200rpx;
    margin-top: -70rpx;
    border-radius: 6rpx;
    border: 1px solid #eee;
}

.homepage .phoneInfo .item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.homepage .tips {
    padding: 30rpx 30rpx 0;
    font-size: 24rpx;
    line-height: 1.7;
    color: #888;
}

.homepage .tips .title {
    color: #4dc029;
}

#mask {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .4);
    position: fixed;
    top: 0;
    left: 0;
}

#mask .modal {
    width: 540rpx;
    height: 320rpx;
    background-color: #fff;
    border-radius: 15rpx;
    text-align: center;
    position: fixed;
    top: 50%;
    left: 50%;
    margin-left: -270rpx;
    margin-top: -160rpx;
    padding-top: 85rpx;
    box-sizing: border-box;
    line-height: 1.5;
    font-size: 28rpx;
}

#mask .sure {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-top: 1px solid #ddd;
    position: absolute;
    bottom: 0;
    font-size: 30rpx;
    color: #4dc029;
}

.banner {
    width: 690rpx;
    height: 200rpx;
    margin: 30rpx auto 0;
}

.banner image {
    width: 100%;
    height: 100%;
}


/*手机排行*/

.items {
    margin: 0 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    position: relative;
}

.items .avatar {
    width: 60rpx;
    height: 60rpx;
    margin-right: 30rpx;
}

.items .model {
    position: absolute;
    right: 0;
    top: 20rpx;
}


/*边距*/

.padding_left_right--30 {
    padding: 0 30rpx;
}

.padding--30 {
    padding: 30rpx;
}


/*角*/

.border_radius {
    border-radius: 50%;
    border: 1px solid #efefef;
}

.border_bottom-grad {
    border-bottom: 1px solid #f5f5f5;
}


/*颜色大小*/

.font_size--30 {
    font-size: 30rpx;
}

.color--grad {
    color: #999;
}

.bg-grad {
    background-color: #f1f1f1;
}


/*高度*/

.height--85 {
    height: 85rpx;
}


/*显示隐藏*/

.hidden {
    display: none;
}

.show {
    display: block;
}